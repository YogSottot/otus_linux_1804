# MySQL integration

init_config:

instances:
  - server: localhost
    user: {{ percona_datadog_user }}
    pass: {{ percona_datadog_password }}
    sock: /var/run/mysqld/mysqld.sock
    tags:
        - pxc
    options:
        replication: {{ 1 if percona_master_host else 0 }}
        galera_cluster: 0
